<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activities.MainActivity">

    <TextView
        android:id="@+id/welcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="Welcom To"
        android:textColor="@color/white"
        android:textSize="54dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="PAOTONET"
        android:textColor="@color/white"
        android:textSize="43dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcom" />

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="93dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:contentDescription="icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcom"
        app:srcCompat="@drawable/app_icon" />

    <Button
        android:id="@+id/btn_parent"
        android:layout_width="326dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:backgroundTint="#CCFFFFFF"
        android:text="Enter as a Parent"
        android:textColor="#277AB0"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_icon" />

    <Button
        android:id="@+id/btn_teacher"
        android:layout_width="326dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:backgroundTint="#CCFFFFFF"
        android:text="Enter as a Teacher"
        android:textColor="#277AB0"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>