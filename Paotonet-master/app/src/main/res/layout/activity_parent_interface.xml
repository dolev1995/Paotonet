<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Activities.ParentInterface">

    <TextView
        android:id="@+id/welcome_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:text="Hi "
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choose_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:text="Choose your activity"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_msg" />

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="70dp"
        android:layout_height="57dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="40dp"
        android:contentDescription="app icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_icon" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="148dp"
        android:layout_height="158dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_msg">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/blue_round_shape" />

        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/blue_round_shape" />

        <ImageView
            android:id="@+id/msg_img"
            android:layout_width="52dp"
            android:layout_height="56dp"
            android:layout_marginStart="75dp"
            android:contentDescription="Messages"
            app:srcCompat="@drawable/msg_img" />

        <TextView
            android:id="@+id/msg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="85dp"
            android:text="   Private \n Messages"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="148dp"
        android:layout_height="158dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_msg">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/green_round_shape" />

        <FrameLayout
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/green_round_shape" />

        <ImageView
            android:id="@+id/health_declaration_img"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_marginStart="78dp"
            android:layout_marginTop="5dp"
            android:contentDescription="health declaration img"
            app:srcCompat="@drawable/health_declaration_icon" />

        <TextView
            android:id="@+id/health_declaration_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="85dp"
            android:text="Digital Health\n  declaration"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="148dp"
        android:layout_height="158dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/rounded_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/red_round_shape" />

        <FrameLayout
            android:layout_width="114dp"
            android:layout_height="90dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/red_round_shape" />


        <ImageView
            android:id="@+id/board_img"
            android:layout_width="42dp"
            android:layout_height="50dp"
            android:layout_marginStart="87dp"
            android:layout_marginTop="7dp"
            android:contentDescription="Board"
            app:srcCompat="@drawable/board_img" />

        <TextView
            android:id="@+id/board_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="85dp"
            android:text="   General \n Messages"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="148dp"
        android:layout_height="158dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout3">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/purple_round_shape" />

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/purple_round_shape" />

        <ImageView
            android:id="@+id/video_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="78dp"
            android:contentDescription="video"
            app:srcCompat="@drawable/video_icon" />

        <TextView
            android:id="@+id/video_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="85dp"
            android:text="    Live\n Stream"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>