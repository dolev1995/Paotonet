<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="135" android:startColor="#1F618D" android:centerColor="#2471A3" android:endColor="#2980B9" android:type="linear" />
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#000000" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="135" android:startColor="#2E86C1" android:centerColor="#3498DB" android:endColor="#5DADE2" android:type="linear" />
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="#000000" />
        </shape>
    </item>

</selector>